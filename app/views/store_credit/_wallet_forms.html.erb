<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

<div class="left-navi-section settings-section">
  <div class="table-responsive">          
    <table class="table">
      <thead>
        <tr>
          <th>Sales in queue</th>
          <th>Earned this month</th>
          <th>Open purchases</th>
          <th>Shopping balance</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>21</td>
          <td>2</td>
          <td><%= humanized_money_with_symbol @current_person.store_credits.last.balance %></td>
        </tr>
      </tbody>
    </table>
  </div>


<p class="text-center">
  <% if @current_person.store_credits.last.balance > 0 %>
  <%= link_to 'Add Money To PayPal Account', '#ToPaypal', 'data-toggle' => 'modal', :class=> "button" %>
  <% end %>
  <%= link_to 'Add Money To Wallet', '#ToWallet', 'data-toggle' => 'modal', :class=> "button" %>
</p>

<div class="modal fade" id="ToPaypal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
          <h5 class="modal-title">Send Money To My PayPal Account</h5>
      </div>
      <div class="modal-body">
        <%= form_for @wallet_transfer, url: wallet_transfer_path do |f| %>
          <%= f.label :amount_cents, 'Amount'%>
          <%= f.text_field :amount_cents, :required => true %><br />
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="ToWallet" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
          <h5 class="modal-title">Add Money To My Wallet</h5>
      </div>
        <div class="modal-body">
          <%= form_for @wallet_transfer, url: add_to_wallet_path do |f| %>
            <%= f.label :amount_cents, 'Amount'%>
            <%= f.text_field :amount_cents, :required => true %><br />
            <%= f.submit %>
          <% end %>
        </div>     
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
    $('#loginForm').formValidation({
        framework: 'bootstrap',
        excluded: ':disabled',
        icon: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            username: {
                validators: {
                    notEmpty: {
                        message: 'The PayPal Id is required'
                    }
                }
            },
            password: {
                validators: {
                    notEmpty: {
                        message: 'The amount is required'
                    }
                }
            }
        }
    });
});
</script>
